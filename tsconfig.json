{
  "compilerOptions": {
    "target": "ES2020",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["./shared/src/*"], // Path alias for shared code
      "@client/*": ["./client/src/*"], // Path alias for client code
      "@server/*": ["./server/src/*"] // Path alias for server code
    }
  },
  "include": ["**/*.ts", "**/*.tsx"], // Include all TS files in the project
  "exclude": ["node_modules", "dist"] // Exclude node_modules and output directories
}
